<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smyrna Global Outreach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGO_V1.styles.css" asp-append-version="true" />
    <link href="~/css/morph.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/sgo.png" width="200" height="70" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation" fdprocessedid="5s8epp">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Team">TEAM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Enquiries" asp-action="Contact">CONTACT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Donations" asp-action="Index">DONATE</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">SERVICES</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Services" asp-action="VenueHire">VENUE</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Produces" asp-action="List">FRESH PRODUCE</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Services" asp-action="MissionarySchool">MISSIONARY SCHOOL</a>
                            </div>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        { 
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">ADMIN SERVICES</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link" asp-area="" asp-controller="Role" asp-action="Index">ROLES</a>
                                    <a class="nav-link" asp-area="" asp-controller="Produces" asp-action="Index">ADD PRODUCE </a>
                                    <a class="nav-link" asp-area="" asp-controller="Services" asp-action="CustomerReviews">VIEW VENUE REVIEWS</a>
                                </div>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><img src="~/images/userIco.png" width="20" height="20"/></a>
                            <div class="dropdown-menu">
                                <partial name="_LoginPartial"/>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <partial name="_CookieConsentPartial" />
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
        </div>
    <br />
    <footer>
        <div class="row" @*style="padding-top: 20px"*@>
                <div class="col-md-6">
                    <p style="padding-left: 10px">Smyrna Global Outreach. All rights reserved.</p>
                </div>
                <div class="col-md-4 text-end">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
