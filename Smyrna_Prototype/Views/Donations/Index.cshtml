@model Smyrna_Prototype.Models.Donation

<link rel="stylesheet" href="~/css/newstyle.css" />

<h1>Make a Donation</h1>

<section class="w3l-contact-11">
	<div class="form-41-mian py-5">
		<div>
            <img src="~/images/donatebanner.jpg" alt="section-image" class="img-section" id="donatebanner"/>
		</div>
		<div class="container py-lg-4">
			<div class="row align-form-map">
				<div class="col-lg-6 contact-left pr-lg-4">
					<div class="partners">
					</div>
					<h5 class="sub-title">We Appreciate Any and All Donations</h5>
					<p class="mt-3 mb-4 pr-lg-5">
						We are passionate to reach out to the homeless, drug addicted,
						single moms, widows, prostitutes and rejects of society; telling them the Good News that Jesus loves them even though the world has rejected them.
						Help us to give back to our community and help to fund our mission school.
					</p>
				</div>
				<div class="col-lg-6 form-inner-cont">
					<div class="title-content text-right">
						<h3 class="hny-title mb-lg-5 mb-4">Personal Information</h3>
						<h4 class="hny-title mb-lg-5 mb-4">Complete the Donation Form and click Submit to proceed to pay points</h4>
					</div>
					<form asp-action="Index" autocomplete="off">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="FirstName" class="control-label"></label>
							<input asp-for="FirstName" class="form-control" />
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<br />
						<div class="form-group">
							<label asp-for="LastName" class="control-label"></label>
							<input asp-for="LastName" class="form-control" />
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
						<br />
						<div class="form-group">
							<label asp-for="CompanyName" class="control-label"></label>
							<input asp-for="CompanyName" class="form-control" />
							<span asp-validation-for="CompanyName" class="text-danger"></span>
						</div>
						<br />
						<div class="form-group">
							<label asp-for="EmailAddress" class="control-label"></label>
							<input asp-for="EmailAddress" class="form-control" />
							<span asp-validation-for="EmailAddress" class="text-danger"></span>
						</div>
						<br />
						<div class="form-group">
							<button class="btn success" type="submit">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
