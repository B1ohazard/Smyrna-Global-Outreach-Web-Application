@model Smyrna_Prototype.Models.CustomerReview

@{
    ViewData["Title"] = "PostReview";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewId" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly="readonly" style="background-color: #f5f5f5; cursor: not-allowed;" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" readonly="readonly" style="background-color: #f5f5f5; cursor: not-allowed;" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" readonly="readonly" style="background-color: #f5f5f5; cursor: not-allowed;" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" readonly="readonly" style="background-color: #f5f5f5; cursor: not-allowed;" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <textarea asp-for="Review" class="form-control" readonly="readonly" style="background-color: #f5f5f5; cursor: not-allowed;"></textarea>
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label" asp-for="IsPosted">Is Posted</label>
                    <input asp-for="IsPosted" class="form-check-input" /> 
                </div>
                <span asp-validation-for="IsPosted" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-sm" asp-action="CustomerReviews">Back to Reviews</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
