@model Smyrna_Prototype.Models.Produce

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produce</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img decoding="async" src="@("~/image/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
        </dd>
    </dl>
</div>
<div>
     @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-sm" asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a>
    }
    <a class="btn btn-sm" asp-action="List">Back to List</a>
</div>
